#!/usr/bin/env bash
# Usage: ./dbcopy relay2 relay1
#   Copy db from relay2 to relay1
#
# Example:
#   $ ./dbcopy relay2 relay1
#   $ ./dbcopy relay2 block-producing

SRC=../$1
DEST=../$2
timestamp=`date +%s`

echo "Copying db from '$SRC' to '$DEST'"

mv $DEST/db $DEST/db-$timestamp
cp -r $SRC/db $DEST/db
